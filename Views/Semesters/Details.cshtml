@model Faculty.Models.Semester

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <h4>Семестр</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID Семестра
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SemesterId)
        </dd>
        <dt class = "col-sm-2">
            Номер семестра
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SemesterNumber)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Изменить", "Edit", new { id = Model.SemesterId }, new { @class = "btn btn-primary" })
    <a asp-action="Index" class="btn btn-info">Вернуться к списку</a>
    @Html.ActionLink("Предметы в семестре", "SubjectsForSemesterId", new { id = Model.SemesterId }, new { @class = "btn btn-info" })
</div>
