@model Faculty.Models.Subject

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h2>Вы действительно хотите удалить этот предмет?</h2>
<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID Предмета
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectId)
        </dd>
        <dt class = "col-sm-2">
            Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Вернуться к списку</a>
    </form>
</div>
