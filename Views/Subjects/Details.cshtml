@model Faculty.Models.Subject

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <h4>Предмет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID Предмета
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectId)
        </dd>
        <dt class = "col-sm-2">
            Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Изменить", "Edit", new { id = Model.SubjectId }, new { @class = "btn btn-info" })
    <a asp-action="Index" class="btn btn-info">Вернуться к списку</a>
    @Html.ActionLink("Учебный план", "AcademicPlanForSubjectId", new { id = Model.SubjectId }, new { @class = "btn btn-info" })
</div>
